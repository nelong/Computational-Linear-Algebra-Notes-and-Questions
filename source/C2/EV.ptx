  <task><statement><p><m>\begin{bmatrix} 1\amp -3 \\-3\amp 1 \end{bmatrix}</m></p></statement></task>
  <task><statement><p><m>\begin{bmatrix} 1\amp 2 \\3\amp 4 \end{bmatrix}</m></p>
